{
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "layout": {
            "contentSize": "1160px",
            "wideSize": "1200px"
        },
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#009988",
                    "name": "Primary (Teal)"
                },
                {
                    "slug": "secondary",
                    "color": "#dbe3df",
                    "name": "Secondary (Light Green)"
                },
                {
                    "slug": "accent",
                    "color": "#ff6666",
                    "name": "Accent (Red)"
                },
                {
                    "slug": "base",
                    "color": "#ffffff",
                    "name": "White"
                },
                {
                    "slug": "text",
                    "color": "#333333",
                    "name": "Dark Text"
                },
                {
                    "slug": "light-bg",
                    "color": "#f9f9f9",
                    "name": "Light Background"
                }
            ],
            "defaultPalette": false
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "-apple-system,system-ui,BlinkMacSystemFont,\"Segoe UI\",Helvetica,Arial,sans-serif",
                    "slug": "system",
                    "name": "System UI"
                },
                {
                    "fontFamily": "\"Montserrat\", sans-serif",
                    "slug": "heading",
                    "name": "Montserrat"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "14px",
                    "name": "Small"
                },
                {
                    "slug": "normal",
                    "size": "16px",
                    "name": "Normal"
                },
                {
                    "slug": "medium",
                    "size": "18px",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "22px",
                    "name": "Large"
                },
                {
                    "slug": "huge",
                    "size": "36px",
                    "name": "Huge"
                }
            ]
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--system)",
            "fontSize": "var(--wp--preset--font-size--normal)",
            "lineHeight": "1.5"
        },
        "color": {
            "text": "var(--wp--preset--color--text)",
            "background": "var(--wp--preset--color--base)"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                }
            },
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontWeight": "700"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontWeight": "700"
                },
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontWeight": "600"
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--base)"
                },
                "border": {
                    "radius": "5px"
                }
            }
        }
    }
}